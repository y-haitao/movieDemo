/* pages/index/index.wxss */

/* 引入公共样式 */
@import "../../common_style/common.wxss";

/* 选项卡(点击/滑动) */
.tab_con {
    width: 100%;
    height: 88rpx;
}

/* 正在热映、即将上映 */
.movie_item {
    display: flex;
    width: 100%;
    padding-left: 30rpx;
    background-color: #fff;
    box-sizing: border-box;
    margin-bottom: 10rpx;
}

.item_left {
    width: 128rpx;
    height: 200rpx;
    position: relative;
    margin-top: 24rpx;
    margin-bottom: 20rpx;
    margin-right: 20rpx;
}

.item_left_img {
    display: block;
    width: 100%;
    height: 200rpx;
}

.item_right{
    flex: 1;
    text-align: left;
    padding: 24rpx 28rpx 24rpx 0;
    box-sizing: border-box;
    height: 220rpx;
    max-height: 220rpx;
    position: relative;
    overflow: hidden;
}

.title{
    max-height: 48rpx;
    margin-bottom: 8rpx;
    line-height: 48rpx;
    overflow: hidden;
}

.title text {
    font-size: 34rpx;
    color: #333;
    font-weight: 700;
    padding-right: 10rpx;
}

.item_right .rating {
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap;
    font-size: 22rpx;
    color: #f03d37;
}

.collect_count{
    height: 30rpx;
    font-size: 30rpx;
    line-height: 30rpx;
    color: #666;
    margin-top: 8rpx;
}

.collect_count_text{
    color: #faaf00;
    font-size: 30rpx;
    font-weight: 600;
    margin-right: 4rpx;
}

.durations{
    font-size: 22rpx;
    line-height: 30rpx;
    font-weight: 700;
    padding-left: 12rpx;
}

.casts{
    font-size: 24rpx;
    color: #666;
    font-weight: 700;
    margin-top: 8rpx;
}

.genres{
    font-size: 24rpx;
    color: #666;
    margin-top: 8rpx;
}

.mainland_pubdate{
    font-size: 26rpx;
    color: #666;
    margin-top: 8rpx;
    line-height: 30rpx;
}
/* ================ */
