/* pages/mine/mine.wxss */

/* 引入公共样式 */
@import "../../common_style/common.wxss";

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  height: 300rpx;
  text-align: center;
  box-sizing: border-box;
  position: relative;
  top: 0rpx;
  left: 0rpx;
}

.userinfo .avatar {
  margin-top: 60rpx;
  width: 120rpx;
  height: 120rpx;
  border-radius: 120rpx;
  border: 6rpx solid #fff;
  box-sizing: border-box;
}

.userinfo .username {
  color: #fff;
  font-size: 28rpx;
  margin-top: 25rpx;
}

.userinfo_bg {
  position: absolute;
  top: 0rpx;
  left: 0rpx;
  z-index: -1;
  display: block;
  width: 100%;
  height: 300rpx;
}

.user_feature {
  width: 100%;
  margin-top: 15rpx;
}

.app-info {
  width: 100%;
  margin-top: 20rpx;
}

.btn-getInfo {
  width: 100%;
  border-radius: 0;
  background: #fff;
  font-size: 30rpx;
  color: #555;
}
